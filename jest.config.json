{
  "roots": ["./test"],
  "preset": "ts-jest",
  "verbose": true,
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest",
    "^.+\\.jsx?$": "babel-jest"
  },
  "moduleNameMapper": {
    "\\.(css|scss)$": "identity-obj-proxy"
  },
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "testPathIgnorePatterns": ["node_modules/", "build/", "test/snapshots"]
}
